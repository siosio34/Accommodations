<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/listview_img"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:padding ="2dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:text="750m"
            android:id="@+id/listview_distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <TextView
                android:text="경복궁"
                android:id="@+id/listview_title"
                android:textSize="16dp"
                android:textColor="#cc060606"
                android:textStyle ="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text ="역관광"
                android:id="@+id/listview_category"
                android:layout_alignBottom="@id/listview_title"
                android:layout_toRightOf="@id/listview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ccc7c3be"
                android:textSize="8dp"
                android:textStyle ="bold"
                android:paddingRight="4dp"/>


            <TextView
                android:id="@+id/listview_rating_num"
                android:layout_alignBottom="@id/listview_title"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp" />

            <RatingBar
                android:layout_toLeftOf="@id/listview_rating_num"
                android:layout_alignBottom="@id/listview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:id="@+id/listview_rating_bar"
                android:numStars="5"
                android:max="5"
                android:stepSize="0.5"/>
            <TextView
                android:id="@+id/listview_rating_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_toLeftOf="@id/listview_rating_bar"
                android:layout_alignBottom="@id/listview_title"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listview_discription"
            android:textColor="#cc060606"
            android:textStyle ="bold"
            android:textSize ="12dp"
            android:padding="4dp"
            android:maxLength="90"
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>