<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="0.875">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#494949"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/info_backbutton"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_icon_button_back" />

        <TextView
            android:id="@+id/info_user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="userEmail"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/info_button_start"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_icon_button_save"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/info_user_thumbnail"
            android:clickable="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/face1"/>

        <EditText
            android:id="@+id/info_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#494949"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="언어 선택"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 국적 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:id="@+id/selCountryButton"
            android:textSize="20sp"
            android:text="국 적 선 택"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#494949"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한 줄 소개"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/info_user_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125"
        android:layout_margin="8dp"
        android:background="@null"
        android:textAlignment="center"
        android:hint="당신을 한 줄로 소개해주세요!"/>

</LinearLayout>